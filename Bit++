#include <iostream>

using namespace std;

int main()
{   int l, x=0;
    char s1,s2,s3;

   cin>> l;

   for(int i=0; i<l; i++)
   {
       cin>>s3>>s2>>s1;

       if(s1=='+' || s3=='+')
       {
           x++;
       }
       else if (s2=='-' || s2=='-')
       {
           x--;
       }
          else if (s2=='+' || s2=='+')
       {
           x++;
       }
           else if(s1=='-' || s3=='-')
       {
           x--;
       }
   }
   cout<<x;
    return 0;
}
